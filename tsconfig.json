{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/WhyChooseSection.jsx", "components/HeroSection.jsx", "components/Navigation.jsx", "components/ServicesSection.jsx", "components/ServiceModal.jsx", "app/layout.jsx", "app/page.jsx", "app/commercial/page.jsx", "app/about/page.jsx", "app/contact/page.jsx", "app/cybersecurity/page.jsx", "app/fire/page.jsx", "components/CTASection.jsx"],
  "exclude": ["node_modules"]
}
